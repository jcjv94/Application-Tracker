<%- include('../partials/header') %>

<h2>Add New Application</h2>
<div class="container row">
<form action="/applications" method="POST">
    <label class="col s6">Job Title:
        <input type="text" name="jobTitle" placeholder="Add a Job Title">
    </label>
    <label class="col s6">Employer:
        <input type="text" name="employer" placeholder="Add an Employer">
    </label>
    <label class="col s6">Location:
        <input type="text" name="location" placeholder="Add Location">
    </label>
    <label class="col s6">Salary Range:
        <input type="number" name="salaryRange" placeholder="Add Salary">
    </label>
    <label class="col s12">Date Applied:
        <input type="text" name="dateApplied" class="datepicker" placeholder="Select a Date">
    </label>
    <label class="col s12">Notes:
        <input type="text" name="notes" placeholder="Add Notes">
    </label><br>
    <button class="btn waves-effect waves-light" type="submit" value="Save"> Save Application
            <i class="material-icons left">add_box</i>
    </button>
</form>
</div>

<%- include('../partials/footer') %>